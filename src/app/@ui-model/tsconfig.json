{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "es2015",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noImplicitAny": false,
    "outDir": "../../../publish/",
    "rootDir": ".",
    "sourceMap": true,
    "target": "es5",
    "inlineSources": true,
    "stripInternal": false,
    "baseUrl": "",
    "typeRoots": [
      "../../../node_modules/@types"
    ],
    "types": [
      "rxjs"
    ],
    "paths": {
      "@ui-model/core": [
        "./core"
      ],
      "@ui-model/common": [
        "./common"
      ],
      "@ui-model/chart": [
        "./chart"
      ],
      "@ui-model/calendar": [
        "./calendar"
      ]
    }
  },
  "files": [
    "core/index.ts",
    "angular/index.ts",
    "angular-bootstrap/index.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "../../../dist",
    "skipTemplateCodegen": true,
    "debug": true
  }
}
